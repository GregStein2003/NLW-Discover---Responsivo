<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Rocktet.q</title>
    <!-- CSS Internos -->
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/home.css">
    <!-- Fontes Google Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@500;700&display=swap" rel="stylesheet">
    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>
<body>
    <div id="home" class="content">
        <header>
            <a href="/">
                <img src="/img/logo.svg" alt="Logo Rocketet.q"/>
            </a>
        </header>

        <div id="bg">
            <div class="ball top"></div>
            <div class="ball bottom"></div>
        </div>

        <main>
            <div class="container">
                <!-- Renderizar EJS conforme URL -->
                <%- include(`parts/${page}`) %>
            </div>
        </main>
    </div>
</body>

<script>
    const iconEyes = document.querySelector('.fa-eye');
    const inputPass = document.querySelector("form input[type='number']");
    
    iconEyes.addEventListener("click", viewEyes)

    function viewEyes(){
        if(inputPass.type == "password"){
            inputPass.type = "number"
            iconEyes.classList.add("ativo");
        }else{
            inputPass.type = "password"
            iconEyes.classList.remove("ativo");
        }
    }
</script>

</html>